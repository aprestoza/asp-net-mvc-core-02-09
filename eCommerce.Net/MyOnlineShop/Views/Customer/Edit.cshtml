@model MyOnlineShop.DataAccess.Models.Customer

<h1>Edit</h1>

<form method="post">
    <input type="hidden" asp-for=@Model.Id value=@ViewData["Id"] />

    <div class="form-group">
        <label>Last Name</label>
        <input asp-for=@Model.FirstName value=@ViewData["FirstName"] />
    </div>

    <div class="form-group">
        <label asp-for=@Model.LastName></label>
        <input asp-for=@Model.LastName value=@ViewData["LastName"] />
    </div>

    <div class="form-group">
        <label asp-for=@Model.Email></label>
        <input asp-for=@Model.Email value=@ViewData["Email"] />
    </div>

    <div class="form-group">
        <label asp-for=@Model.ContactNumber></label>
        <input asp-for=@Model.ContactNumber value=@ViewData["ContactNumber"] />
    </div>

    <input class="btn btn-default" type="submit" name="Update" value="Update" />

</form>


